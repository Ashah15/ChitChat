	<%= form_with model: @user do |f| %>  
      <%= render 'error/error_messages' %>

	<%= f.label :name %>
	<%= f.text_field :name, class: 'input-bar d-block' %> 

      <%= f.label :username %>
      <%= f.text_field :username, class: 'input-bar d-block' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'input-bar d-block' %>

      <%= f.label :location %>
      <%= f.text_field :location, class: 'input-bar d-block' %>

      <%= f.label :avatar, class: 'd-block text-center'%>
      <%= f.file_field :avatar , class: 'custom-file-input'%>


      <%= f.submit "Update Profile", class: "auth-btn d-block" %>
    <% end %>