<%= render 'layouts/header' %>
   <div class="main-content-cover-pic"></div>
    <div class="main-content-body row">
        <%= render 'layouts/profile' %>
        <div class="col" id="tweets-col">
        <%= render "commentform" %>
        <p class="tweets-titlebar">ChitChat</p>
        <%= render @comments %>
        </div>
        <div class="col followers-col last-col" >
          <p>Who to follow</p>
           <% @users.each do|user| %>
            <% unless user == current_user %>
               <% show_users(user)%>
               <div class="row j-between">
                 <div class="row s-person">
                  <%= user_avatar(user) %>
                  <p class="follower-name"><span class="f-name"><%= user.name %></span> <i class="fas fa-check-circle"></i><br><span class="u-name">@<%= user.username %></span></p>
                </div>
                <%= user_fan(user) %>
                  </div>               
            <% end %>
            <% end %>
        </div>
    </div>
</div>