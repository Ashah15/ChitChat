	<%= form_with model: @user do |f| %>  
      <%= render 'error/error_message', resource: @user %>

	<%= f.label :name %>
	<%= f.text_field :name, class: 'input-bar d-block' %> 

      <%= f.label :username %>
      <%= f.text_field :username, class: 'input-bar d-block' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'input-bar d-block' %>


      <%= f.submit "Update Profile", class: "auth-btn d-block" %>
    <% end %>